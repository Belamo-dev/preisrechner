---
const { title, description } = Astro.props;
const canonical = Astro.url.origin + Astro.url.pathname;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="index,follow" />
    <meta name="google-site-verification" content="Jdf2P-A0e4P3PQZo514ds_cSS_EjW1xfv2f6jVo6uQw" />
    <link rel="canonical" href={canonical} />

    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}

    <meta property="og:locale" content="de_DE" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Preis pro 100 Rechner" />
    <meta property="og:title" content={title} />
    {description ? <meta property="og:description" content={description} /> : null}
    <meta property="og:url" content={canonical} />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    {description ? <meta name="twitter:description" content={description} /> : null}

    <style>
      :root {
        --bg: #0b0e14;
        --card: #121826;
        --text: #e7eefc;
        --muted: #9fb0d0;
        --line: #24314f;
        --accent: #7aa2ff;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        background: var(--bg);
        color: var(--text);
      }
      .wrap { max-width: 980px; margin: 0 auto; padding: 24px; }
      header { margin-bottom: 16px; }
      h1 { margin: 0 0 6px; font-size: 28px; }
      p { margin: 0; color: var(--muted); line-height: 1.5; }
      a { color: var(--accent); text-decoration: none; }
      a:hover { text-decoration: underline; }

      .nav {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin: 12px 0 0;
      }
      .nav a {
        display: inline-block;
        padding: 8px 10px;
        border-radius: 10px;
        border: 1px solid var(--line);
        background: #0f1524;
        color: var(--text);
        font-size: 13px;
      }

      .content { margin-top: 16px; }
      .footer {
        margin-top: 26px;
        padding-top: 16px;
        border-top: 1px solid var(--line);
        color: var(--muted);
        font-size: 12px;
      }

      .footerLinks {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header>
        <slot name="header" />
        <nav class="nav" aria-label="Navigation">
          <a href="/">Rechner</a>
          <a href="/grundpreis-berechnen">Grundpreis</a>
          <a href="/angebot-vergleichen">Angebote vergleichen</a>
          <a href="/preis-pro-100g">Preis pro 100 g</a>
          <a href="/preis-pro-100ml">Preis pro 100 ml</a>
          <a href="/2-fuer-1-rechner">2 für 1</a>
          <a href="/rabatt-rechner">Rabatt</a>
        </nav>
      </header>

      <main class="content">
        <slot />
      </main>

      <footer class="footer">
        <div class="footerLinks">
          <a href="/ueber">Über</a>
          <span>·</span>
          <a href="/impressum">Impressum</a>
          <span>·</span>
          <a href="/datenschutz">Datenschutz</a>
        </div>
      </footer>
    </div>
  </body>
</html>
