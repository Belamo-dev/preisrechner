---
import BaseLayout from "../layouts/BaseLayout.astro";
import Calculator from "../components/Calculator.astro";
import FaqBlock from "../components/FaqBlock.astro";
import RelatedLinks from "../components/RelatedLinks.astro";

const title = "Angebote vergleichen";
const description =
  "Zwei Angebote vergleichen, auch wenn Packungsgrößen unterschiedlich sind. Entscheidend ist der Grundpreis pro 100.";

const faq = [
  { q: "Was ist besser: €/100 oder €/kg bzw €/l?", a: "Beides ist ok. Wichtig ist, dass du konsequent dieselbe Einheit nutzt." },
  { q: "Wie vergleiche ich 2 für 1 Angebote?", a: "Verdopple die Menge oder halbiere den Preis und rechne dann pro 100." },
  { q: "Warum weicht mein Ergebnis vom Regal ab?", a: "Rundungen und leicht andere Mengenangaben können kleine Unterschiede erzeugen." },
];

const related = [
  { href: "/2-fuer-1-rechner", label: "2 für 1 Angebot berechnen" },
  { href: "/rabatt-rechner", label: "Rabatt berechnen" },
  { href: "/grundpreis-berechnen", label: "Grundpreis berechnen" },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <p>
    Beim Einkaufen ist der Stückpreis oft eine Falle. Der Grundpreis pro 100 g oder pro 100 ml zeigt dir
    objektiv, welches Angebot wirklich günstiger ist.
  </p>

  <h2>Tipps für einen fairen Vergleich</h2>
  <ul>
    <li>Vergleiche immer pro 100 g oder pro 100 ml.</li>
    <li>Nutze den gleichen Einheitstyp (Gewicht oder Volumen) für beide Produkte.</li>
    <li>Bei Aktionen wie 2 für 1: Menge oder Preis korrekt anpassen.</li>
  </ul>

  <h2>Rechner</h2>
  <Calculator />

  <FaqBlock items={faq} />
  <RelatedLinks links={related} />
</BaseLayout>
