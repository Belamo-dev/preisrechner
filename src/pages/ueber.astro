---
import BaseLayout from "../layouts/BaseLayout.astro";
import FaqBlock from "../components/FaqBlock.astro";
import RelatedLinks from "../components/RelatedLinks.astro";

const title = "Über diesen Rechner";
const description = "Wofür der Preis pro 100 Rechner ist und wie du ihn nutzt.";

const faq = [
  { q: "Warum gibt es diese Seite?", a: "Damit du Produkte schnell und fair über den Grundpreis vergleichen kannst." },
  { q: "Setzt die Seite Cookies?", a: "Nein. Es werden keine Tracking Cookies eingesetzt." },
  { q: "Gibt es Nutzerkonten?", a: "Nein, es gibt keine Registrierung und keine Accounts." },
];

const related = [
  { href: "/", label: "Zum Rechner" },
  { href: "/grundpreis-berechnen", label: "Grundpreis berechnen" },
  { href: "/angebot-vergleichen", label: "Angebote vergleichen" },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <p>
    Dieser Rechner hilft dir, Produkte fair zu vergleichen, auch wenn Packungsgrößen unterschiedlich sind.
    Du gibst Preis und Menge ein und bekommst den Grundpreis pro 100 g oder pro 100 ml.
  </p>

  <h2>Kontakt</h2>
  <p>Wenn du Feedback hast, nutze die Kontaktangaben im <a href="/impressum">Impressum</a>.</p>

  <FaqBlock items={faq} />
  <RelatedLinks links={related} />
</BaseLayout>
