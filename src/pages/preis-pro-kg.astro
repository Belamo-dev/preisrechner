---
import BaseLayout from "../layouts/BaseLayout.astro";
import Calculator from "../components/Calculator.astro";
import FaqBlock from "../components/FaqBlock.astro";
import RelatedLinks from "../components/RelatedLinks.astro";

const title = "Preis pro kg berechnen";
const description =
  "Preis pro Kilogramm berechnen und Packungsgrößen fair vergleichen. Einfach aus Preis und Menge.";

const faq = [
  { q: "Wie bekomme ich €/kg aus €/100 g?", a: "Preis pro kg ist Preis pro 100 g mal 10." },
  { q: "Wie rechne ich kg in g um?", a: "1 kg entspricht 1000 g." },
  { q: "Warum ist €/kg manchmal sinnvoller?", a: "Bei großen Mengen ist €/kg übersichtlicher als €/100 g." },
];

const related = [
  { href: "/preis-pro-100g", label: "Preis pro 100 g berechnen" },
  { href: "/menge-umrechnen-g-kg", label: "g und kg umrechnen" },
  { href: "/grundpreis-berechnen", label: "Grundpreis berechnen" },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <p>
    Wenn du einen Preis pro kg möchtest, kannst du das über den Grundpreis pro 100 g ableiten. Das ist
    praktisch, weil viele Produkte am Regal so ausgezeichnet sind.
  </p>

  <h2>Umrechnung</h2>
  <p><strong>Preis pro kg</strong> = (Preis pro 100 g) × 10</p>

  <h2>Rechner</h2>
  <Calculator />

  <FaqBlock items={faq} />
  <RelatedLinks links={related} />
</BaseLayout>
