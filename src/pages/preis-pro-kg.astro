---
import BaseLayout from "../layouts/BaseLayout.astro";
import Calculator from "../components/Calculator.astro";
import FaqJsonLd from "../components/FaqJsonLd.astro";

const title = "Preis pro kg berechnen";
const description =
  "Preis pro Kilogramm berechnen und Packungsgrößen fair vergleichen. Einfach aus Preis und Menge.";

const faq = [
  { q: "Wie bekomme ich €/kg aus €/100 g?", a: "Preis pro kg ist Preis pro 100 g mal 10." },
  { q: "Wie rechne ich kg in g um?", a: "1 kg entspricht 1000 g." },
  { q: "Warum gibt es am Regal unterschiedliche Angaben?", a: "Je nach Produkt zeigt der Handel €/kg oder €/100 g an, beides ist korrekt." },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <FaqJsonLd items={faq} />

  <p>
    Wenn du einen Preis pro kg möchtest, kannst du das über den Grundpreis pro 100 g ableiten. Das ist
    praktisch, weil viele Produkte am Regal so ausgezeichnet sind.
  </p>

  <h2>Umrechnung</h2>
  <p><strong>Preis pro kg</strong> = (Preis pro 100 g) × 10</p>

  <h2>Rechner</h2>
  <Calculator />

  <h2>FAQ</h2>
  <p><strong>{faq[0].q}</strong><br />{faq[0].a}</p>
  <p><strong>{faq[1].q}</strong><br />{faq[1].a}</p>
  <p><strong>{faq[2].q}</strong><br />{faq[2].a}</p>

  <h2>Weiter</h2>
  <ul>
    <li><a href="/menge-umrechnen-g-kg">g und kg umrechnen</a></li>
    <li><a href="/preis-pro-100g">Preis pro 100 g berechnen</a></li>
    <li><a href="/angebot-vergleichen">Angebote vergleichen</a></li>
  </ul>
</BaseLayout>
