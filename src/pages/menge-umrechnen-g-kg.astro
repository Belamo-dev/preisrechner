---
import BaseLayout from "../layouts/BaseLayout.astro";
import Calculator from "../components/Calculator.astro";
import FaqBlock from "../components/FaqBlock.astro";
import RelatedLinks from "../components/RelatedLinks.astro";

const title = "g in kg umrechnen";
const description =
  "Gramm und Kilogramm umrechnen, damit Grundpreis Vergleiche stimmen. Plus Rechner zum direkten Vergleich.";

const faq = [
  { q: "500 g sind wie viel kg?", a: "500 g sind 0,5 kg." },
  { q: "0,75 kg sind wie viel g?", a: "0,75 kg sind 750 g." },
  { q: "Warum ist Umrechnen wichtig?", a: "Weil du nur mit gleichen Einheiten fair vergleichen kannst." },
];

const related = [
  { href: "/preis-pro-100g", label: "Preis pro 100 g berechnen" },
  { href: "/preis-pro-kg", label: "Preis pro kg berechnen" },
  { href: "/grundpreis-berechnen", label: "Grundpreis berechnen" },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <p>
    Viele Produkte sind in g angegeben, manche in kg. Damit dein Vergleich stimmt, brauchst du eine
    schnelle Umrechnung. Der Rechner unterstützt beide Einheiten direkt.
  </p>

  <h2>Umrechnung</h2>
  <ul>
    <li><strong>1 kg = 1000 g</strong></li>
    <li><strong>g in kg</strong>: g / 1000</li>
    <li><strong>kg in g</strong>: kg × 1000</li>
  </ul>

  <h2>Rechner</h2>
  <Calculator />

  <FaqBlock items={faq} />
  <RelatedLinks links={related} />
</BaseLayout>
