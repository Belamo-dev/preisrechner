---
import BaseLayout from "../layouts/BaseLayout.astro";
import Calculator from "../components/Calculator.astro";
import FaqJsonLd from "../components/FaqJsonLd.astro";

const title = "Rabatt Rechner";
const description =
  "Rabatt berechnen und den neuen Preis direkt im Grundpreis Rechner prüfen. Ideal für Angebote.";

const faq = [
  { q: "Wie berechne ich den neuen Preis mit Rabatt?", a: "Neuer Preis = Alter Preis × (1 - Rabatt/100)." },
  { q: "Warum sollte ich danach den Grundpreis prüfen?", a: "Weil der Grundpreis zeigt, ob das Angebot pro 100 wirklich günstiger ist." },
  { q: "Warum gibt es Rundungsunterschiede?", a: "Durch Cent Rundungen und abweichende Mengenangaben entstehen kleine Abweichungen." },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <FaqJsonLd items={faq} />

  <p>
    Prozentangaben wirken gut, aber am Ende zählt der neue Grundpreis. Rechne zuerst den rabattierten
    Preis aus und gib ihn dann im Rechner ein.
  </p>

  <h2>Formel</h2>
  <p><strong>Neuer Preis</strong> = Alter Preis × (1 - Rabatt in % / 100)</p>

  <h2>Beispiel</h2>
  <p>3,49 € mit 20 % Rabatt: 3,49 × 0,8 = 2,79 €</p>

  <h2>Rechner</h2>
  <Calculator />

  <h2>FAQ</h2>
  <p><strong>{faq[0].q}</strong><br />{faq[0].a}</p>
  <p><strong>{faq[1].q}</strong><br />{faq[1].a}</p>
  <p><strong>{faq[2].q}</strong><br />{faq[2].a}</p>

  <h2>Weiter</h2>
  <ul>
    <li><a href="/angebot-vergleichen">Angebote vergleichen</a></li>
    <li><a href="/2-fuer-1-rechner">2 für 1 Angebot berechnen</a></li>
    <li><a href="/grundpreis-berechnen">Grundpreis berechnen</a></li>
  </ul>
</BaseLayout>
