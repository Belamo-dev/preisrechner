---
import BaseLayout from "../layouts/BaseLayout.astro";
import Calculator from "../components/Calculator.astro";
import FaqBlock from "../components/FaqBlock.astro";
import RelatedLinks from "../components/RelatedLinks.astro";
import Adsense from "../components/Adsense.astro";

const title = "Preis pro 100 Rechner";
const description =
  "Preis pro 100 g/ml berechnen und zwei Produkte vergleichen. Schnell, kostenlos, ohne Anmeldung.";

const faq = [
  {
    q: "Wie berechne ich den Preis pro 100 g oder 100 ml?",
    a: "Du gibst Preis und Menge ein und wählst die passende Einheit. Der Rechner rechnet automatisch auf 100 g oder 100 ml um.",
  },
  {
    q: "Kann ich g und kg oder ml und l mischen?",
    a: "Ja. g und kg werden automatisch umgerechnet, genauso wie ml und l. Gewicht und Volumen solltest du nicht mischen.",
  },
  {
    q: "Warum steht manchmal ein anderer Grundpreis am Regal?",
    a: "Kleine Abweichungen können durch Rundungen oder leicht andere Mengenangaben entstehen.",
  },
];

const related = [
  { href: "/preis-pro-100g", label: "Preis pro 100 g berechnen" },
  { href: "/preis-pro-100ml", label: "Preis pro 100 ml berechnen" },
  { href: "/angebot-vergleichen", label: "Angebote vergleichen" },
  { href: "/rabatt-rechner", label: "Rabatt berechnen" },
  { href: "/2-fuer-1-rechner", label: "2 für 1 Angebot berechnen" },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <Calculator />

  <h2>Warum Grundpreis vergleichen?</h2>
  <p>
    Der Grundpreis pro 100 g oder pro 100 ml macht Produkte vergleichbar, auch wenn Packungsgrößen
    unterschiedlich sind. So siehst du sofort, welches Angebot wirklich günstiger ist.
  </p>

  <RelatedLinks title="Beliebte Rechner" links={related} />
  <FaqBlock items={faq} />

  <Fragment slot="ad">
    <Adsense client="ca-pub-XXXXXXXXXXXXXXX" slot="0000000000" />
  </Fragment>
</BaseLayout>
