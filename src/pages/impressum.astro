---
import BaseLayout from "../layouts/BaseLayout.astro";
import FaqBlock from "../components/FaqBlock.astro";
import RelatedLinks from "../components/RelatedLinks.astro";

const title = "Impressum";
const description = "Pflichtangaben nach deutschem Recht. Bitte mit deinen Daten ausfüllen.";

const faq = [
  { q: "Warum braucht die Seite ein Impressum?", a: "In Deutschland sind viele Websites verpflichtet, Anbieterangaben bereitzustellen." },
  { q: "Welche Daten muss ich eintragen?", a: "Name, ladungsfähige Anschrift und eine Kontaktmöglichkeit wie E-Mail. Je nach Fall kommen weitere Angaben dazu." },
  { q: "Kann ich Privatperson oder Firma eintragen?", a: "Beides ist möglich. Wichtig ist, dass die Angaben korrekt und aktuell sind." },
];

const related = [
  { href: "/datenschutz", label: "Datenschutz" },
  { href: "/ueber", label: "Über" },
  { href: "/", label: "Zum Rechner" },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <h2>Angaben gemäß § 5 TMG</h2>
  <p>
    Name: DEIN NAME<br />
    Straße Hausnummer: DEINE STRASSE<br />
    PLZ Ort: DEIN ORT<br />
    Land: Deutschland
  </p>

  <h2>Kontakt</h2>
  <p>
    E-Mail: DEINE EMAIL<br />
    Telefon: DEINE TELEFONNUMMER (optional)
  </p>

  <h2>Haftung für Inhalte</h2>
  <p>
    Die Inhalte dieser Website wurden mit größtmöglicher Sorgfalt erstellt. Für die Richtigkeit,
    Vollständigkeit und Aktualität kann jedoch keine Gewähr übernommen werden.
  </p>

  <FaqBlock items={faq} />
  <RelatedLinks links={related} />
</BaseLayout>
