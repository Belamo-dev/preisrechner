---
import BaseLayout from "../layouts/BaseLayout.astro";
import Calculator from "../components/Calculator.astro";
import FaqBlock from "../components/FaqBlock.astro";
import RelatedLinks from "../components/RelatedLinks.astro";

const title = "Preis pro 100 g berechnen";
const description =
  "Grundpreis pro 100 g berechnen und Produkte mit unterschiedlichen Packungsgrößen fair vergleichen.";

const faq = [
  {
    q: "Was, wenn die Menge in kg angegeben ist?",
    a: "1 kg entspricht 1000 g. Du kannst kg im Rechner auswählen, er rechnet automatisch um.",
  },
  {
    q: "Warum zeigt der Laden oft €/kg an?",
    a: "Das ist nur eine andere Skalierung. €/kg entspricht dem Wert pro 100 g mal 10.",
  },
  {
    q: "Warum sind große Packungen nicht immer günstiger?",
    a: "Angebote und Marken können dazu führen, dass kleinere Packungen pro 100 g günstiger sind.",
  },
];

const related = [
  { href: "/preis-pro-kg", label: "Preis pro kg berechnen" },
  { href: "/menge-umrechnen-g-kg", label: "g und kg umrechnen" },
  { href: "/angebot-vergleichen", label: "Angebote vergleichen" },
];
---

<BaseLayout title={title} description={description}>
  <h1 slot="header">{title}</h1>
  <p slot="header">{description}</p>

  <p>
    Viele Angebote wirken günstig, sind es aber nicht, wenn die Packung kleiner ist. Der Grundpreis pro
    100 g macht den Vergleich fair und schnell.
  </p>

  <h2>Formel</h2>
  <p><strong>Preis pro 100 g</strong> = Preis / Menge in g × 100</p>

  <h2>Rechner</h2>
  <Calculator />

  <FaqBlock items={faq} />
  <RelatedLinks links={related} />
</BaseLayout>
